<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Assign a device </h1>
        <%- include ('../partials/messages'); -%>
        <form action="/assignments/new" method="POST">
          <div>
            <label for="employees_id">Select Employee:</label>
            <select id="employees_id" name="employees_id">
              <% employees.forEach(employee => { %>
                <option value="<%= employee.id %>"><%= employee.email %></option>
              <% }) %>
            </select>
          </div>
        
          <div>
            <label for="devices_id">Select Device:</label>
            <select id="devices_id" name="devices_id">
              <% devices.forEach(device => { %>
                <option value="<%= device.id %>"><%= device.serial_number %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="status">status</label>
            <input
              type="int"
              id="status"
              name="status"
              class="form-control"
              placeholder="1 for active, 0 for inactive"
              <!-- value="<%= typeof status != 'undefined' ? status : '' %>" -->
          </div>
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    // Initialize Select2 for the employee and device select inputs
    $(document).ready(function() {
      $('#employees_id').select2();
      $('#devices_id').select2();
    });
  </script>

  