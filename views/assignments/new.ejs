<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Assign a device </h1>
        
        <form action="/users/assignment" method="POST">
            <div class="form-group">
                <label for="employee_email">Email</label>
                <input
                  type="email"
                  id="employee_email"
                  name="employee_email"
                  class="form-control"
                  placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
          <div class="form-group">
            <label for="device_serial_number">Device serial number</label>
            <input
              type="text"
              id="device_serial_number"
              name="device_serial_number"
              class="form-control"
              placeholder="Enter device type prefix"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="status">status</label>
            <input
              type="int"
              id="status"
              name="status"
              class="form-control"
              placeholder="1 for active, 0 for inactive"
              <!-- value="<%= typeof name != 'undefined' ? name : '' %>" -->
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </form>
      </div>
    </div>
  </div>
  