<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th> Email</th>
            <th>country</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        <% employees.forEach(function(empl) { %>
            <tr>
                <td><%= empl.first_name %></td>
                <td><%= empl.last_name %></td>
                <td><%= empl.email %></td>
                <td><%= empl.country %></td>
                <td><%= empl.department.name %></td>
                <td>
                    <a href="/employees/<%= empl.id %>" class="btn btn-primary">View</a>
                    <a href="/employees/<%= empl.id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/employees/<%= empl.id %>?_method=DELETE" method="POST" style="display: inline-block;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>
<div>
    <a href="/employees/new" class="btn-primary">Add new Employee</a>
    <a href="/dashboard" class="btn-primary">Go back to dashboard</a>
</div>