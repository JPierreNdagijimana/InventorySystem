//ejs to display all employees in a table
<table class="table table-striped table-bordered">

    <thead>

        <tr>

            <th>Employee Name</th>

            <th>Employee Email</th>

            <th>Employee Phone</th>

            <th>Employee Address</th>

            <th>Employee Department</th>

        </tr>

    </thead>

    <tbody>

        <% for(var i=0; i<employees.length; i++) {%>

            <tr>

                <td><%= employees[i].name %></td>

                <td><%= employees[i].email %></td>

                <td><%= employees[i].phone %></td>

                <td><%= employees[i].address %></td>

                <td><%= department_names[i].name %></td>

                <td>

                    <a href="/employees/<%= employees[i].id %>" class="btn btn-primary">View</a>

                    <a href="/employees/<%= employees[i].id %>/edit" class="btn btn-warning">Edit</a>

                    <form action="/employees/<%= employees[i].id %>?_method=DELETE" method="POST" style="display: inline-block;">

                        <button class="btn btn-danger">Delete</button>

                    </form>

                </td>

            </tr>

        <% } %>

    </tbody>