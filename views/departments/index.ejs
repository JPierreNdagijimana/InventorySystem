//ejs to display all departments in a table
<table class="table table-striped table-bordered">

    <thead>

        <tr>

            <th>Department name</th>

            <th>Department code</th>

        </tr>

    </thead>

    <tbody>

        <% for(var i=0; i<departments.length; i++) {%>

            <tr>

                <td><%= departments[i].name %></td>

                <td><%= departments[i].code %></td>

                <td>

                    <a href="/departments/<%= departments[i]._id %>" class="btn btn-primary">View</a>

                    <a href="/departments/<%= departments[i]._id %>/edit" class="btn btn-warning">Edit</a>

                    <form action="/departments/<%= departments[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">

                        <button class="btn btn-danger">Delete</button>

                    </form>

                </td>

            </tr>

        <% } %>

    </tbody>