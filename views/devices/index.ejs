//ejs to display all devices in a table
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Device Type</th>
            <th>Device Model</th>
            <th>Device Serial Number</th>
            <th>Device Code</th>
            <th>Device Status</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i<devices.length; i++) {%>
            <tr>
                <td><%= devices[i].device_type_name %></td>
                <td><%= devices[i].device_model %></td>
                <td><%= devices[i].device_serial_number %></td>
                <td><%= devices[i].device_code %></td>
                <td><%= devices[i].device_status %></td>
                <td>
                    <a href="/devices/<%= devices[i]._id %>" class="btn btn-primary">View</a>
                    <a href="/devices/<%= devices[i]._id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/devices/<%= devices[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>

