<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Device Type</th>
            <th>Device Model</th>
            <th>Device Serial Number</th>
            <th>Device Code</th>
            <th>Device Status</th>
        </tr>
    </thead>
    <tbody>
        <% devices.forEach(function(device) { %>
            <tr>
                <td><%= devices.name %></td>
                <td><%= devices.model %></td>
                <td><%= devices.serial_number %></td>
                <td><%= devices.code %></td>
                <td><%= devices.status %></td>
                <td>
                    <form action="/devices/<%= devices.id %>?_method=DELETE" method="POST" style="display: inline-block;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>
<div>
    <a href="/devices/new" class="btn-primary">Add new Device</a>
    <a href="/dashboard" class="btn-primary">Go back to dashboard</a>
</div>