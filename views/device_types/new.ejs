<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Add new Device Type </h1>
        
        <form action="/users/addDeviceType" method="POST">
            <div class="form-group">
                <label for="device_type_name">name</label>
                <input
                  type="text"
                  id="device_type_name"
                  name="device_type_name"
                  class="form-control"
                  placeholder="Enter device type name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
          <div class="form-group">
            <label for="prefix">prefix</label>
            <input
              type="text"
              id="prefix"
              name="prefix"
              class="form-control"
              placeholder="Enter device type prefix"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Add</button>
        </form>
      </div>
    </div>
  </div>